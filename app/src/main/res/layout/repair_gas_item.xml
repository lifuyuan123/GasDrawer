<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:text="型       号："
                android:textColor="@color/contentTxt"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/gas_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="品        牌："
                android:textColor="@color/contentTxt"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/gas_Brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:text="燃具序号："
                android:textColor="@color/contentTxt"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/gas_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="安装日期："
                android:textColor="@color/contentTxt"
                android:gravity="center" />

            <EditText
                android:inputType="date"
                android:id="@+id/gas_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="故障维修："
                    android:textColor="@color/contentTxt"
                    android:gravity="center"
                    />
                <RadioGroup
                    android:id="@+id/gas_gz_rg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/gas_gz_rg_ture"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="是"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        />
                    <RadioButton
                        android:id="@+id/gas_gz_rg_false"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="否"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        />

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="保        养："
                    android:textColor="@color/contentTxt"
                    android:gravity="center"
                    />
                <RadioGroup
                    android:id="@+id/gas_by_rg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/gas_by_rg_ture"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="是"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        />
                    <RadioButton
                        android:id="@+id/gas_by_rg_false"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="否"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/x10"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="更换配件："
                    android:textColor="@color/contentTxt"
                    android:gravity="center"
                    />
                <RadioGroup
                    android:id="@+id/gas_gh_gr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/gas_gh_gr_ture"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="是"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        />
                    <RadioButton
                        android:id="@+id/gas_gh_gr_false"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="否"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="保内保外："
                    android:textColor="@color/contentTxt"
                    android:gravity="center"
                    />
                <RadioGroup
                    android:id="@+id/gas_bnw_gr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/gas_bnw_gr_ture"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="保内"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="保外"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/contentTxt"
                        android:id="@+id/radioButton" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>