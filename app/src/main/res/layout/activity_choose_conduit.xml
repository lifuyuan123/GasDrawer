<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.gasdrawer.ui.activity.ChooseConduitActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择管道"
            android:layout_centerInParent="true"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/erectWork_commit"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x10"
            android:layout_alignParentEnd="true"
            android:text="确认"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/x14"
            />
    </RelativeLayout>

    <!--选择管道-->
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/x5"
            android:gravity="center"
            android:text="@string/two_location"
            android:textSize="@dimen/x13"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"/>
        <RadioGroup
            android:id="@+id/group_conduit"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <RadioButton
                android:id="@+id/radiobt_out"
                android:layout_weight="1"
                android:textSize="@dimen/x13"
                android:textColor="@color/contentTxt"
                android:text="明封"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/radiobt_hide"
                android:layout_weight="1"
                android:textSize="@dimen/x13"
                android:textColor="@color/contentTxt"
                android:text="暗埋"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </RadioGroup>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
