<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repair_work"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.gasdrawer.ui.activity.RepairWork">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ic_back"
            android:id="@+id/repair_repairWork_back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="派工信息"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x50"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x20"
                android:text="维修人："
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:textColor="@color/contentTxt"
                />
            <TextView
                android:id="@+id/repair_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="周设计"
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:textColor="@color/contentTxt"
                />
        </LinearLayout>
        <TextView
            android:background="@color/banckgray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x20"
                android:text="报修简述："
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:textColor="@color/contentTxt"
                />
            <TextView
                android:id="@+id/repair_mark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="开气时，检查漏气"
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:textColor="@color/contentTxt"
                />
        </LinearLayout>
        <TextView
            android:background="@color/banckgray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />
        <LinearLayout
            android:layout_marginBottom="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x20"
                android:text="派工时间："
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:textColor="@color/contentTxt"
                />
            <TextView
                android:id="@+id/repair_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2017.12.12"
                android:textSize="@dimen/x14"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:textColor="@color/contentTxt"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
