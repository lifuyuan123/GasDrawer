<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repair_other"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.gasdrawer.ui.activity.RepairOther">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ic_back"
            android:id="@+id/repair_other_back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="其他维护事项"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x15"
            />
        <TextView
            android:id="@+id/repair_other_btn"
            android:layout_width="@dimen/x50"
            android:layout_height="match_parent"
            android:text="@string/CostBtnSure"
            android:gravity="center"
            android:textSize="@dimen/x14"
            android:background="@color/blue"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/repair_check_edt"
            android:textColor="@color/contentTxt"
            android:hint="填写其他维护事项"
            android:inputType="text"
            android:gravity="center"
            android:id="@+id/repair_other_edt" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x25"
        android:text="维修后气密性实验:"
        android:gravity="center"
        android:textSize="@dimen/x15"
        android:textColor="@color/contentTxt"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        />
    <RadioGroup
        android:id="@+id/other_sy_rg"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/x20"
        >
        <RadioButton
            android:id="@+id/repair_other_hg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合格"
            android:textColor="@color/contentTxt"
            android:layout_marginLeft="@dimen/x20"
            />
        <RadioButton
            android:id="@+id/repair_other_bhg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="不合格"
            android:textColor="@color/contentTxt"
            android:layout_marginLeft="@dimen/x20"
            />
    </RadioGroup>
    </LinearLayout>
</LinearLayout>
