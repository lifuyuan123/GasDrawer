<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_audit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.sctjsj.gasdrawer.ui.activity.AuditActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ic_back"
            android:id="@+id/Instalact_Img_back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="安裝详情"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/x35"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户基本信息"
                    android:textSize="@dimen/x15"
                    android:padding="@dimen/x10"
                    />
                <TextView
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/x1"
                    android:background="@color/banckgray"
                    />
                <!--客户基本信息-->
                <LinearLayout
                    android:layout_marginTop="@dimen/x5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="户名："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                         />

                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_YWtype"
                        />
                </LinearLayout>
                <!--户号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="户号："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_WorkNumber"
                        />
                </LinearLayout>
                <!--CEA号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="CEA号："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_CAE"
                        />
                </LinearLayout>
                <!--作业单号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="作业单号："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_ordreNumber"
                        />
                </LinearLayout>
                <!--联系电话-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="联系电话："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/Instalact_Txt_phone"
                        />
                </LinearLayout>
                <!--地址-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_location"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派工详情"
                    android:textSize="@dimen/x15"
                    android:padding="@dimen/x10"
                    />
                <TextView
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/x1"
                    android:background="@color/banckgray"
                    />
                <!--客户基本信息-->
                <LinearLayout
                    android:layout_marginTop="@dimen/x5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="规划人："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:id="@+id/audit_Txt_planner"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <!--户号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="规划日期："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_date" />
                </LinearLayout>
                <!--CEA号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="安装人："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_worker"
                        />
                </LinearLayout>
                <!--作业单号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="安装方式："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_deparName"
                        />
                </LinearLayout>
                <!--联系电话-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/x75"
                        android:layout_height="wrap_content"
                        android:text="安装日期："
                        android:padding="@dimen/x5"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/x5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/audit_Txt_dates"
                        />
                </LinearLayout>

            </LinearLayout>
            <!--材料使用清单-->
            <LinearLayout
                android:layout_marginTop="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/material"
                    android:textSize="@dimen/x13"
                    android:padding="@dimen/x10"
                    />
                <TextView
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/x1"
                    android:background="@color/banckgray"
                    />
                <ListView
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/audit_LtV_CL"
                    />
            </LinearLayout>
            <!--服务费清单-->
            <LinearLayout
                android:layout_marginTop="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/serve"
                    android:textSize="@dimen/x13"
                    android:padding="@dimen/x10"
                    />
                <TextView
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/x1"
                    android:background="@color/banckgray"
                    />
                <ListView
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/audit_LtV_Ser"
                    />
            </LinearLayout>
            <!--服务费清单-->
            <LinearLayout
                android:layout_marginTop="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现场照片"
                    android:textSize="@dimen/x13"
                    android:padding="@dimen/x10"
                    />
                <TextView
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/x1"
                    android:background="@color/banckgray"
                    />
                <com.sctjsj.gasdrawer.ui.CustomView.CustomGridView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/repair_check_edt"
                    android:visibility="gone"
                    android:id="@+id/audit_GreadView"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginBottom="@dimen/x5"
                    />
            </LinearLayout>
           <LinearLayout
               android:layout_marginTop="@dimen/x10"
               android:layout_width="match_parent"
               android:layout_height="@dimen/x40"
               android:orientation="horizontal"
               >
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   >
                   <Button
                       android:layout_width="@dimen/x100"
                       android:layout_height="match_parent"
                       android:text="核对有误"
                       android:id="@+id/audit_defult"
                       android:background="@drawable/instal_btn_background"
                       android:textColor="@color/white"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   >
                   <Button
                       android:layout_width="@dimen/x100"
                       android:layout_height="match_parent"
                       android:text="审核通过"
                       android:id="@+id/audit_succeed"
                       android:background="@drawable/instal_btn_background"
                       android:textColor="@color/white"
                       />
               </LinearLayout>
           </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
