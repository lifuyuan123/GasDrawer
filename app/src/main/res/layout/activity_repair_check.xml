<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repair_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/banckgray"
    tools:context="com.sctjsj.gasdrawer.ui.activity.RepairCheck">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ic_back"
            android:id="@+id/repair_repairCheck_back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="现场查看故障原因"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x15"
            />
        <TextView
            android:id="@+id/repair_repairCheck_btn"
            android:layout_width="@dimen/x50"
            android:layout_height="match_parent"
            android:text="@string/CostBtnSure"
            android:gravity="center"
            android:textSize="@dimen/x14"
            android:background="@color/blue"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <EditText
            android:id="@+id/repair_repairCheck_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:layout_margin="@dimen/x10"
            android:hint="填写现场故障原因"
            android:gravity="center"
            android:inputType="text"
           android:padding="@dimen/x5"
            android:textSize="@dimen/x14"
            android:background="@drawable/repair_check_edt"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:orientation="vertical"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x20"
            android:text="是否与报修相符:"
            android:textSize="@dimen/x15"
            android:gravity="center"
            android:textColor="@color/contentTxt"
            />

        <RadioGroup
            android:id="@+id/repair_check_rgyn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rad_ture"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="是"
                android:textColor="@color/contentTxt"
                android:layout_marginLeft="@dimen/x16"
                />
            <RadioButton
                android:id="@+id/rad_false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="否"
                android:textColor="@color/contentTxt"
                android:layout_marginLeft="@dimen/x22"
                />
        </RadioGroup>
    </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/x5"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/banckgray"
            />
        <LinearLayout
            android:layout_marginBottom="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x20"
                android:textSize="@dimen/x15"
                android:text="用气性质:"
                android:gravity="center_vertical"
                android:textColor="@color/contentTxt"
                />
            <RadioGroup
                android:id="@+id/rapair_check_rgxz"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="民用"
                    android:textColor="@color/contentTxt"
                    android:layout_marginLeft="@dimen/x16"
                    />
                <RadioButton
                    android:id="@+id/rad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="商业"
                    android:textColor="@color/contentTxt"
                    android:layout_marginLeft="@dimen/x10"
                    />
                <RadioButton
                    android:id="@+id/rad_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="工业"
                    android:textColor="@color/contentTxt"
                    android:layout_marginLeft="@dimen/x10"
                    />
                <RadioButton
                    android:id="@+id/rad_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="集体"
                    android:textColor="@color/contentTxt"
                    android:layout_marginLeft="@dimen/x10"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
