<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repair_case"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/banckgray"
    tools:context="com.sctjsj.gasdrawer.ui.activity.RepairCase">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ic_back"
            android:id="@+id/repair_case_back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="故障与维修情况"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x15"
            />
        <TextView
            android:id="@+id/repair_case_btn"
            android:layout_width="@dimen/x50"
            android:layout_height="match_parent"
            android:text="@string/CostBtnSure"
            android:gravity="center"
            android:textSize="@dimen/x14"
            android:background="@color/blue"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:text="压力:"
            android:gravity="center"
            android:textSize="@dimen/x15"
            android:textColor="@color/contentTxt"
            android:layout_marginLeft="@dimen/x20"
            />
        <RadioGroup
            android:id="@+id/repair_case_rgyl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/repair_dy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="低压"
                android:textColor="@color/contentTxt"
                android:layout_marginLeft="@dimen/x16"
                />
            <RadioButton
                android:id="@+id/repair_zy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="中压"
                android:textColor="@color/contentTxt"
                android:layout_marginLeft="@dimen/x22"
                />
        </RadioGroup>
        <TextView
            android:layout_marginTop="@dimen/x5"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/banckgray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:text="泄露位置:"
            android:gravity="center"
            android:textSize="@dimen/x15"
            android:textColor="@color/contentTxt"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            />
        <RadioGroup
            android:id="@+id/repair_case_rgxl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/repair_sl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="室内"
            android:textColor="@color/contentTxt"
            android:layout_marginLeft="@dimen/x16"
            />
            <RadioButton
                android:id="@+id/repair_dx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="地下"
                android:textColor="@color/contentTxt"
                android:layout_marginLeft="@dimen/x22"
                />
            <RadioButton
                android:id="@+id/repair_sw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="室外"
                android:textColor="@color/contentTxt"
                android:layout_marginLeft="@dimen/x16"
                />
        </RadioGroup>
        <TextView
            android:layout_marginTop="@dimen/x5"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x20"
            android:background="@color/banckgray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:text="管道材料:"
            android:gravity="center"
            android:textSize="@dimen/x15"
            android:textColor="@color/contentTxt"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            />




        <RadioGroup
            android:id="@+id/radg_top"
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x20"
            >
            <RadioButton
            android:id="@+id/radb_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="镀锌管"
            android:textColor="@color/contentTxt"
            />
            <RadioButton
                android:id="@+id/radb_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="波纹管"
                android:textColor="@color/contentTxt"
                />
            <RadioButton
                android:id="@+id/radb_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="薄壁管"
                android:textColor="@color/contentTxt"
                />
            <RadioButton
                android:id="@+id/radb_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="PE管"
                android:textColor="@color/contentTxt"
                />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/radg_buttom"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x20"
            >
            <RadioButton
                android:id="@+id/radb_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="无缝管"
                android:textColor="@color/contentTxt"
                />
            <RadioButton
                android:id="@+id/radb_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="塑料管"
                android:textColor="@color/contentTxt"
                />
            <RadioButton
                android:id="@+id/radb_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="软管"
                android:textColor="@color/contentTxt"
                />
            <RadioButton
                android:id="@+id/radb_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="其他"
                android:textColor="@color/contentTxt"
                />
        </RadioGroup>





        <TextView
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x20"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/x10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="安装日期:"
                    android:gravity="center"
                    android:textColor="@color/contentTxt"
                    android:layout_marginLeft="@dimen/x20"
                    />
                <EditText
                    android:inputType="date"
                    android:id="@+id/repair_case_edaz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="安检日期:"
                    android:gravity="center"
                    android:textColor="@color/contentTxt"
                    />
                <EditText
                    android:inputType="date"
                    android:id="@+id/repair_case_edaj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x20"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
