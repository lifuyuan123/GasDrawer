<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repair_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/banckgray"
    tools:context="com.sctjsj.gasdrawer.ui.activity.RepairMessageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ic_back"
            android:id="@+id/repair_message_back"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="维修作业单"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x15"
            />
        <TextView
            android:id="@+id/repair_message_btn"
            android:layout_width="@dimen/x50"
            android:layout_height="match_parent"
            android:text="上传"
            android:gravity="center"
            android:textSize="@dimen/x14"
            android:background="@color/blue"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <LinearLayout
        android:id="@+id/repair_Usermessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/customer_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="报修客户基本信息"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/repair_workMsg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/dispatching_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="派工信息"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/repair_cause"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/fault_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:id="@+id/repair_fault"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="现场查看故障原因"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/repair_faultmsg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/repair_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="故障与维修情况"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/repair_gas"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/gas_appliance_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="燃具维修"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/lin_server"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/add_iconn"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="添加服务费"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/lin_material"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/material_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="材料清单"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/repair_other"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/maintain_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="其他维护事项"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            android:id="@+id/textView5" />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
    <LinearLayout
        android:id="@+id/repair_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/addicon_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="添加维修照片"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/title_one"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/ic_right"
            />
    </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />


        //缴费方式
        <LinearLayout
            android:id="@+id/repair_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/payment_icon"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="收费方式"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:textSize="@dimen/x13"
                android:textColor="@color/title_one"
                />
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x10"
                android:src="@drawable/ic_right"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/banckgray"
            android:layout_marginLeft="@dimen/x10"
            />
        <LinearLayout
            android:id="@+id/repair_autograph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/autograph_icon"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="签名"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:textSize="@dimen/x13"
                android:textColor="@color/title_one"
                />
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x10"
                android:src="@drawable/ic_right"
                />
        </LinearLayout>

</LinearLayout>
    </ScrollView>
</LinearLayout>