<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <CheckBox
            android:id="@+id/chose_child_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x20"
            />
        <TextView
            android:id="@+id/chose_child_SerNumber"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:text="0033"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x18"
            />
        <TextView
            android:id="@+id/chose_child_SerName"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:text="家用报警器"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x11"
            />
        <TextView
            android:id="@+id/chose_child_Cost"
            android:layout_width="@dimen/x50"
            android:layout_height="match_parent"
            android:text="40/套"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x5"
            />
        <Button
            android:id="@+id/chose_child_SerMsg"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x30"
            android:text="查看"
            android:textSize="@dimen/x9"
            android:layout_marginLeft="@dimen/x5"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/chose_child_edt"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x25"
            android:gravity="center"
            android:textSize="@dimen/x10"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/chost_child_item_edt"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/banckgray"
        />
</LinearLayout>