<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.gasdrawer.ui.activity.SearchMaterialActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="材料搜索"
            android:layout_centerInParent="true"
            android:textSize="@dimen/x17"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确定"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@drawable/backlog_edt_background"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x15"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/x15"
            android:src="@drawable/ic_search"
            />
        <EditText
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/backlog_ViewPager_Edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x30"
            android:hint="@string/backlog_edt"
            android:gravity="center"
            android:background="@null" />
    </LinearLayout>

    <ListView
        android:dividerHeight="@dimen/x1"
        android:background="@color/white"
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/lv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
