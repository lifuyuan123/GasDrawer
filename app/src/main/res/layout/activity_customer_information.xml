<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banckgray"
    android:orientation="vertical"
    tools:context="com.sctjsj.gasdrawer.ui.activity.CustomerInformationActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@color/blue"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_marginLeft="@dimen/x10"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Customer_basic_information"
                android:layout_centerInParent="true"
                android:textSize="@dimen/x17"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    <!--客户信息-->
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
           android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:gravity="center"
                android:text="CAE编号："
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/erectwork_tv_CEAnumber"
                android:gravity="center"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                />
        </LinearLayout>

        <TextView
            android:background="@color/banckgray"
            android:layout_width="@dimen/x310"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="@dimen/x1" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:gravity="center"
                android:text="@string/work_number"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/erectwork_tv_worknumber"
                android:layout_marginRight="@dimen/x5"
                android:gravity="center"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:background="@color/banckgray"
            android:layout_width="@dimen/x310"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="@dimen/x1" />


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView

                android:gravity="center"
                android:text="户       号："
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x35"
                android:id="@+id/erectwork_tv_usernumber" />
        </LinearLayout>

        <TextView
            android:background="@color/banckgray"
            android:layout_width="@dimen/x310"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="@dimen/x1" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:gravity="center_vertical"
                android:text="户       名："
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/erectwork_tv_username"
                android:layout_marginRight="@dimen/x5"
                android:gravity="center"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x40"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:background="@color/banckgray"
            android:layout_width="@dimen/x310"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="@dimen/x1" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:gravity="center"
                android:text="@string/user_phone"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/erectwork_tv_userphone"
                android:gravity="center"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"/>
        </LinearLayout>

        <TextView
            android:background="@color/banckgray"
            android:layout_width="@dimen/x310"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="@dimen/x1" />


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:gravity="center"
                android:text="地       址："
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/erectwork_tv_userAdress"
                android:layout_marginRight="@dimen/x10"
                android:gravity="center"
                android:textSize="@dimen/x13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>